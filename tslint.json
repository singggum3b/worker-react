{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "ordered-imports": false,
    "no-console": ["log"],
    "semicolon": false,
    "max-classes-per-file": [false],
    "no-submodule-imports": [true, "redux-saga"],
    "arrow-parens": ["ban-single-arg-parens"],
    "no-this-assignment": [true, { "allow-destructuring": true }]
  }
}